---
import Layout from '../layouts/Layout.astro';
import Header from '../sections/Header.astro';
import Hero from '../sections/Hero.astro';
import Explanation from '../sections/Explanation.astro';
import Benefits from '../sections/Benefits.astro';
import Faq from '../sections/Faq.astro';
import Contact from '../sections/Contact.astro';
import Footer from '../sections/Footer.astro';
---

<Layout title="Tutorlink">
	<div class="gradient">
		<Header />
		<Hero />
	</div>
	<main>
		<Explanation />
		<Benefits />
		<Faq />
		<Contact />
	</main>
	<Footer />
</Layout>

<style is:global>
	.gradient {
		background: radial-gradient(circle at 40% 100%, #362C85 0%, #1C1935 100%);
	}
</style>
